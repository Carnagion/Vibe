<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.Vibe" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Vibe.Splash" parent="Theme.Vibe">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Menu.Vibe.Popup" parent="@android:style/Widget.PopupMenu">
        <item name="android:background">@color/background_elevation_1</item>
        <item name="android:itemBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/on_background_importance_high</item>
    </style>
    
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>