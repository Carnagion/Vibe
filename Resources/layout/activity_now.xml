<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@color/background">
        <android.support.design.widget.CollapsingToolbarLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                                                               app:title="@string/activity_now_title">
            <ImageView android:layout_width="match_parent"
                       android:layout_height="@dimen/collapsing_toolbar_height"
                       android:src="@color/background"
                       android:scaleType="centerCrop"
                       app:layout_collapseMode="parallax"/>
            <android.support.v7.widget.Toolbar android:id="@+id/activity_now_toolbar"
                                               android:layout_width="match_parent"
                                               android:layout_height="?attr/actionBarSize"
                                               android:clickable="false"
                                               android:focusable="false"
                                               app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>
        <View style="@style/Divider"/>
    </android.support.design.widget.AppBarLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:padding="@dimen/item_screen_full_padding"
                      android:orientation="vertical">
            <ImageView android:id="@+id/activity_now_image"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="@dimen/item_screen_full_padding"
                       android:adjustViewBounds="true"
                       android:scaleType="fitCenter"
                       android:background="@drawable/rounded"/>
            <TextView android:id="@+id/activity_now_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="24sp"
                      android:maxLines="1"
                      android:ellipsize="marquee"
                      android:marqueeRepeatLimit="marquee_forever"
                      android:scrollHorizontally="true"
                      android:focusable="true"/>
            <TextView android:id="@+id/activity_now_artist"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:maxLines="1"
                      android:ellipsize="marquee"
                      android:marqueeRepeatLimit="marquee_forever"
                      android:scrollHorizontally="true"
                      android:focusable="true"/>
            <TextView android:id="@+id/activity_now_album"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:maxLines="1"
                      android:ellipsize="marquee"
                      android:marqueeRepeatLimit="marquee_forever"
                      android:scrollHorizontally="true"
                      android:focusable="true"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:orientation="vertical"
                  android:background="@color/background">
        <View style="@style/Divider"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="?attr/listPreferredItemPaddingRight"
                        android:paddingRight="?attr/listPreferredItemPaddingRight"
                        android:paddingLeft="?attr/listPreferredItemPaddingLeft">
            <SeekBar android:id="@+id/activity_now_seek"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:thumbTint="@color/on_background"/>
            <TextView android:id="@+id/activity_now_duration_current"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/activity_now_seek"
                      android:gravity="left"/>
            <TextView android:id="@+id/activity_now_duration_max"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/activity_now_seek"
                      android:layout_alignParentRight="true"
                      android:gravity="right"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <ImageButton android:id="@+id/activity_now_pause"
                         android:layout_width="@dimen/icon_normal_target"
                         android:layout_height="@dimen/icon_normal_target"
                         android:layout_centerInParent="true"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:src="@drawable/pause_circle"/>
            <ImageButton android:id="@+id/activity_now_previous"
                         android:layout_width="@dimen/icon_normal_target"
                         android:layout_height="@dimen/icon_normal_target"
                         android:layout_centerVertical="true"
                         android:layout_toLeftOf="@id/activity_now_pause"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:src="@drawable/skip_previous"/>
            <ImageButton android:id="@+id/activity_now_next"
                         android:layout_width="@dimen/icon_normal_target"
                         android:layout_height="@dimen/icon_normal_target"
                         android:layout_centerVertical="true"
                         android:layout_toRightOf="@id/activity_now_pause"
                         android:background="?attr/selectableItemBackgroundBorderless"
                         android:src="@drawable/skip_next"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>