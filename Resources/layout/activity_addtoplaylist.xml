<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout android:id="@+id/activity_addtoplaylist_layout"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent" 
                                                 android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout android:id="@+id/activity_addtoplaylist_appbar"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@color/background_elevation_1"
                                                android:elevation="8dp"
                                                app:layout_scrollFlags="scroll|enterAlways">
        <android.support.v7.widget.Toolbar android:id="@+id/activity_addtoplaylist_toolbar"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           app:contentInsetStart="0dp"
                                           app:contentInsetEnd="0dp"
                                           app:layout_scrollFlags="scroll|enterAlways">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <TextView android:id="@+id/activity_addtoplaylist_appbar"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textAppearance="@style/Text.Vibe.Title.Montserrat"
                          android:textSize="24sp"
                          android:text="@string/menu_item_add_to_playlist"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ListView android:id="@+id/activity_addtoplaylist_list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/activity_addtoplaylist_appbar"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              android:scrollbarThumbVertical="@drawable/shape_list_scrollbar"
              android:divider="@color/background"
              android:clipToPadding="false"
              android:paddingBottom="80dp"/>
</android.support.design.widget.CoordinatorLayout>