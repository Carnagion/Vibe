<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeightLarge"
                android:clickable="false">
    <ImageView android:id="@+id/item_album_image"
               android:layout_width="@dimen/icon_normal_target"
               android:layout_height="@dimen/icon_normal_target"
               android:layout_margin="?attr/listPreferredItemPaddingLeft"
               android:background="@drawable/rounded"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_toRightOf="@id/item_album_image"
                  android:layout_toLeftOf="@id/item_album_more"
                  android:weightSum="2"
                  android:orientation="vertical">
        <TextView android:id="@+id/item_album_title"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:gravity="bottom"
                  android:textColor="@color/on_background_importance_high"
                  android:maxLines="1"
                  android:ellipsize="end"/>
        <TextView android:id="@+id/item_album_info"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:gravity="top"
                  android:textColor="@color/on_background_importance_mid"
                  android:maxLines="1"
                  android:ellipsize="end"/>
    </LinearLayout>
    <ImageButton android:id="@+id/item_album_more"
                 android:layout_width="@dimen/icon_normal_target"
                 android:layout_height="@dimen/icon_normal_target"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:src="@drawable/more_vertical"/>s
</RelativeLayout>