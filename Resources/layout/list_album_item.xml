<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView android:id="@+id/list_album_item_image"
               android:layout_width="64dp"
               android:layout_height="64dp"
               android:layout_margin="8dp"
               android:elevation="4dp"
               android:background="@drawable/shape_rounded"
               android:backgroundTint="@color/background_elevation_2"/>
    <TextView android:id="@+id/list_album_item_title"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_toLeftOf="@id/list_album_item_more"
              android:layout_toRightOf="@id/list_album_item_image"
              android:gravity="bottom"
              android:layout_marginLeft="8dp"
              android:textAppearance="@style/Text.Vibe.Title.Ubuntu"
              android:textSize="14sp"
              android:maxLines="1"
              android:ellipsize="end"/>
    <TextView android:id="@+id/list_album_item_info"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_toLeftOf="@id/list_album_item_more"
              android:layout_toRightOf="@id/list_album_item_image"
              android:layout_below="@id/list_album_item_title"
              android:gravity="top"
              android:layout_marginLeft="8dp"
              android:textAppearance="@style/Text.Vibe.Content.OpenSans"
              android:textSize="12sp"
              android:maxLines="1"
              android:ellipsize="end"/>
    <ImageButton android:id="@+id/list_album_item_more"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:focusable="false"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:src="@drawable/icon_list_item_more"/>
</RelativeLayout>