<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout android:id="@+id/activity_main_appbar"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@color/background">
        <android.support.design.widget.CollapsingToolbarLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                                                               app:title="@string/activity_main_title">
            <ImageView android:layout_width="match_parent"
                       android:layout_height="@dimen/collapsing_toolbar_height"
                       android:src="@color/background"
                       android:scaleType="centerCrop"
                       app:layout_collapseMode="parallax"/>
            <android.support.v7.widget.Toolbar android:id="@+id/activity_main_toolbar"
                                               android:layout_width="match_parent"
                                               android:layout_height="?attr/actionBarSize"
                                               android:clickable="false"
                                               android:focusable="false"
                                               app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>
        <android.support.design.widget.TabLayout android:id="@+id/activity_main_tabs"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 app:tabIndicatorColor="@color/on_background"
                                                 app:tabSelectedTextColor="@color/on_background"
                                                 app:tabTextColor="@color/on_background_importance_mid">
            <android.support.design.widget.TabItem android:text="@string/activity_main_tab_artists"/>
            <android.support.design.widget.TabItem android:text="@string/activity_main_tab_albums"/>
            <android.support.design.widget.TabItem android:text="@string/activity_main_tab_tracks"/>
        </android.support.design.widget.TabLayout>
        <View style="@style/Divider"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager android:id="@+id/activity_main_viewpager"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:layout_below="@id/activity_main_appbar"
                                       app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <fragment android:id="@+id/activity_main_fragment_now"
              class="Vibe.Interface.Fragments.NowPlayingFragment"
              android:layout_width="match_parent"
              android:layout_height="?attr/listPreferredItemHeightLarge"
              android:layout_gravity="bottom"/>
</android.support.design.widget.CoordinatorLayout>