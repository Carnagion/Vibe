<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/activity_nowplaying_topbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <ImageButton android:id="@+id/activity_nowplaying_back"
                     android:layout_width="56dp"
                     android:layout_height="56dp"
                     android:alpha="0.67"
                     android:background="@color/background"
                     android:src="@drawable/icon_nowplaying_back"/>
        <TextView android:id="@+id/activity_nowplaying_toptext"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:padding="16dp"
                  android:textAppearance="@style/Text.Vibe.Miscellaneous.Ubuntu"
                  android:textSize="16sp"
                  android:text="@string/activity_nowplaying_toptext"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/activity_nowplaying_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/activity_nowplaying_topbar" 
                    android:layout_above="@id/activity_nowplaying_controls"
                    android:padding="16dp">
        <ImageView android:id="@+id/activity_nowplaying_trackimage"
                   android:layout_width="256dp"
                   android:layout_height="256dp"
                   android:layout_centerInParent="true"
                   android:elevation="8dp"
                   android:background="@drawable/shape_rounded"/>
        <TextView android:id="@+id/activity_nowplaying_tracktitle"
                  android:layout_width="match_parent"
                  android:layout_height="48dp"
                  android:layout_below="@id/activity_nowplaying_trackimage"
                  android:layout_marginTop="12dp"
                  android:text="Title"
                  android:textAppearance="@style/Text.Vibe.Title.Montserrat"
                  android:textSize="32sp"
                  android:maxLines="1"
                  android:ellipsize="marquee"
                  android:marqueeRepeatLimit="marquee_forever"
                  android:scrollHorizontally="true"
                  android:focusable="true"/>
        <TextView android:id="@+id/activity_nowplaying_trackinfo"
                  android:layout_width="match_parent"
                  android:layout_height="24dp"
                  android:layout_below="@id/activity_nowplaying_tracktitle"
                  android:text="Title Â· Name"
                  android:textAppearance="@style/Text.Vibe.Content.OpenSans"
                  android:textSize="16sp"
                  android:maxLines="1"
                  android:ellipsize="marquee"
                  android:marqueeRepeatLimit="marquee_forever"
                  android:scrollHorizontally="true"
                  android:focusable="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/activity_nowplaying_controls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="16dp"
                    android:elevation="24dp"
                    android:background="@color/background_elevation_1">
        <RelativeLayout android:id="@+id/activity_nowplaying_seek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <SeekBar android:id="@+id/activity_nowplaying_seekbar"
                     android:layout_width="match_parent"
                     android:layout_height="8dp"
                     android:minHeight="4dp"
                     android:maxHeight="4dp"
                     android:layout_centerHorizontal="true"
                     android:layout_alignParentTop="true"
                     android:progressDrawable="@drawable/shape_nowplaying_seek"
                     android:thumbTint="@color/on_background"/>
            <TextView android:id="@+id/activity_nowplaying_duration_current"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/activity_nowplaying_seekbar"
                      android:gravity="left"
                      android:maxLines="1"
                      android:textAppearance="@style/Text.Vibe.Content.Montserrat"
                      android:textSize="12sp"/>
            <TextView android:id="@+id/activity_nowplaying_duration_max"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/activity_nowplaying_seekbar"
                      android:layout_alignParentRight="true"
                      android:gravity="right"
                      android:maxLines="1"
                      android:textAppearance="@style/Text.Vibe.Content.Montserrat"
                      android:textSize="12sp"/>
        </RelativeLayout>
        <ImageButton android:id="@+id/activity_nowplaying_pause"
                     android:layout_width="56dp"
                     android:layout_height="56dp"
                     android:layout_centerHorizontal="true"
                     android:layout_below="@id/activity_nowplaying_seek"
                     android:elevation="24dp"
                     android:background="@drawable/shape_nowplaying_pause"
                     android:src="@drawable/icon_nowplaying_play"/>
        <ImageButton android:id="@+id/activity_nowplaying_skipnext"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_centerVertical="true"
                     android:layout_below="@id/activity_nowplaying_seek"
                     android:layout_toRightOf="@id/activity_nowplaying_pause"
                     android:layout_marginTop="8dp"
                     android:layout_marginLeft="20dp"
                     android:background="@color/background_elevation_1"
                     android:src="@drawable/icon_nowplaying_skipnext"/>
        <ImageButton android:id="@+id/activity_nowplaying_skipprevious"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_centerVertical="true"
                     android:layout_below="@id/activity_nowplaying_seek"
                     android:layout_toLeftOf="@id/activity_nowplaying_pause"
                     android:layout_marginTop="8dp"
                     android:layout_marginRight="20dp"
                     android:background="@color/background_elevation_1"
                     android:src="@drawable/icon_nowplaying_skipprevious"/>
    </RelativeLayout>
</RelativeLayout>