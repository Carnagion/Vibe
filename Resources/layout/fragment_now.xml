<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeightLarge"
                android:background="@color/background"
                android:clickable="true">
    <View style="@style/Divider"/>
    <ImageView android:id="@+id/fragment_now_image"
               android:layout_width="@dimen/icon_normal_target"
               android:layout_height="@dimen/icon_normal_target"
               android:layout_margin="?attr/listPreferredItemPaddingLeft"
               android:background="@drawable/rounded"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_toRightOf="@id/fragment_now_image"
                  android:layout_toLeftOf="@id/fragment_now_pause"
                  android:weightSum="2"
                  android:orientation="vertical">
        <TextView android:id="@+id/fragment_now_title"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_toRightOf="@id/fragment_now_image"
                  android:gravity="bottom"
                  android:maxLines="1"
                  android:ellipsize="marquee"
                  android:marqueeRepeatLimit="marquee_forever"
                  android:scrollHorizontally="true"
                  android:focusable="true"/>
        <TextView android:id="@+id/fragment_now_info"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_toRightOf="@id/fragment_now_image"
                  android:layout_below="@id/fragment_now_title"
                  android:gravity="top"
                  android:maxLines="1"
                  android:ellipsize="marquee"
                  android:marqueeRepeatLimit="marquee_forever"
                  android:scrollHorizontally="true"
                  android:focusable="true"/>
    </LinearLayout>
    <ImageButton android:id="@+id/fragment_now_pause"
                 android:layout_width="@dimen/icon_normal_target"
                 android:layout_height="@dimen/icon_normal_target"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:layout_margin="?attr/listPreferredItemPaddingRight"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:src="@drawable/pause"/>
</RelativeLayout>