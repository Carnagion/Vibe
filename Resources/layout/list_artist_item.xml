<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView android:id="@+id/list_artist_item_image"
               android:layout_width="64dp"
               android:layout_height="64dp"
               android:layout_margin="8dp"
               android:elevation="4dp"
               android:background="@drawable/shape_rounded"
               android:backgroundTint="@color/background_elevation_2"/>
    <TextView android:id="@+id/list_artist_item_name"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:layout_toRightOf="@id/list_artist_item_image"
              android:gravity="center_vertical"
              android:layout_margin="8dp"
              android:textAppearance="@style/Text.Vibe.Title.Ubuntu"
              android:textSize="14sp"
              android:maxLines="1"
              android:ellipsize="end"/>
</RelativeLayout>